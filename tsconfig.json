{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~~/*": ["./*"],
      "~/*": ["./*"],
      "#app": ["./node_modules/nuxt/dist/app/index.d.ts"],
      "#imports": ["./.nuxt/imports.d.ts"],
      "#build/*": ["./.nuxt/*"]
    },

    "jsx": "preserve",
    "verbatimModuleSyntax": true
  },
  "vueCompilerOptions": {
    "target": 3.5,
    "strictTemplates": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.vue"],
  "exclude": ["node_modules", ".nuxt", ".output", "supabase/functions/**"]
}
