{
  "name": "openground-react",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run typecheck && npm run lint && npm run test && npm run test:e2e",
    "playwright:install": "playwright install",
    "generate:tests": "tsx scripts/generate-tests.ts",
    "test:requirements": "npm run generate:tests && npm run test:all",
    "auto-fix": "tsx scripts/auto-fix.ts",
    "auto-fix:analyze": "tsx scripts/auto-fix.ts --analyze-only",
    "check:i18n": "tsx scripts/check-i18n.ts",
    "test:i18n": "playwright test tests/e2e/i18n-validation.spec.ts",
    "test:i18n:ui": "playwright test tests/e2e/i18n-validation.spec.ts --ui",
    "validate:i18n": "npm run check:i18n && npm run test:i18n"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.45.4",
    "@tanstack/react-query": "^5.56.2",
    "autoprefixer": "^10.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.400.0",
    "next": "^15.0.0",
    "next-intl": "^4.3.4",
    "postcss": "^8.4.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hook-form": "^7.62.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.0",
    "@playwright/test": "^1.45.0",
    "@tailwindcss/typography": "^0.5.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^15.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "jsdom": "^24.1.0",
    "tsx": "^4.19.0",
    "typescript": "^5.0.0",
    "vitest": "^2.1.0",
    "yaml": "^2.5.0"
  }
}
